{
	"name":"gleeBox",
	"version":"0.5",
	"description":"Keyboard glee for your web",
	"icons":{
		"128": "images/icon_128.png"
	},
	"background_page":"background.html",
	"content_scripts":[
	{
		"matches":["http://*/*","https://*/*"],
		"css":["css/glee.css"],
		"js":["js/jquery.js","js/glee.js"],
		"run_at":"document_start"
	}],
	"permissions":[
		"tabs",
		"http://api.bit.ly/",
		"bookmarks"
	],
	"browser_action":{
		"default_icon":"images/icon_19.png",
		"default_title":"gleeBox:Switch state"
	},
	"update_url": "http://thegleebox.com/chrome/updates.xml"	
}